#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;

int main() {
   int num1;
   int num2;
   int num3;
   int num4;

   /* Type your code here. */
   
   //get user input
   cin >> num1 >> num2 >> num3 >> num4;
   
   //output product and average
   cout << num1 * num2 * num3 * num4 << " ";
   cout << (num1 + num2 + num3 + num4) / 4 << endl;
   
   cout << fixed << setprecision(3) << num1 * num2 * num3 * num4 << " " << (num1 + num2 + num3 + num4) / 4 << endl;


   return 0;
}

